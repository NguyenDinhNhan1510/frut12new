                        <form asp-action="Delete">
                            <div class="card-body">
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Mã nhân viên:</label>
                                    @Html.DisplayFor(modelItem => Model.UserID)
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputPassword1">Tên nhân viên:</label>
                                    @Html.DisplayFor(modelItem => Model.UserName)
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Email:</label>
                                    @Html.DisplayFor(modelItem => Model.Email)
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">IsActive:</label>
                                    @Html.DisplayFor(modelItem => Model.IsActive)
                                </div>
                              
                                <form asp-action="Delete">
                                    <input type="hidden" asp-for="UserID" />
                                    <input type="submit" value="Xoa" class="btn btn-danger" />
                                    <a asp-action="Index" class="btn btn-primary">Quay lai</a>

                                </form>

                            </div>
                        </form>
                    </div>
