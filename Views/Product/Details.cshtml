@model TbProduct
@{
    List<TbProductReview> productReview = ViewBag.productReview;
    List<TbProduct> productRelated = ViewBag.productRelated;
}

<section class="product-details spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6">
                <div class="product__details__pic">
                    <div class="product__details__pic__item">
                        <img class="product__details__pic__item--large"
                        src="@Model.Image" alt="">
                    </div>
                    <div class="product__details__pic__slider owl-carousel">
                        <img data-imgbigurl="img/product/details/product-details-2.jpg"
                        src="@Model.Image" alt="">
                        <img data-imgbigurl="img/product/details/product-details-3.jpg"
                        src="@Model.Image" alt="">
                        <img data-imgbigurl="img/product/details/product-details-5.jpg"
                        src="@Model.Image" alt="">
                        <img data-imgbigurl="img/product/details/product-details-4.jpg"
                        src="@Model.Image" alt="">
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-md-6">
                <div class="product__details__text">
                    <h3>@Model.Title</h3>
                    <div class="product__details__rating">
                    
                        @for (var i=0; i< Model.Star; i++)
                        {
                            <i class="fa fa-star"></i>
                        }

                        <span>(@productReview.Count() reviews)</span>
                    </div>
                    <div class="product__details__price">
                        @if (Model.PriceSale == 0)
                        {
                            <span class="new-price text-danger">$@Model.Price</span>

                        }
                        else
                        {
                            <span class="new-price text-danger">$@Model.PriceSale</span>
                            <span class="old-price text-primary">(Giá gốc  $@Model.Price) </span>
                        }
                        </div>
                    <p>
                        @Model.Description
                    </p>
                    <div class="product__details__quantity">
                        <div class="quantity">
                            <div class="pro-qty">
                                <input type="text" value="1">
                            </div>
                        </div>
                    </div>
                    <a href="#" class="primary-btn">ADD TO CARD</a>
                    <a href="#" class="heart-icon"><span class="icon_heart_alt"></span></a>
                    <ul>
                        <li><b>Availability</b> <span>In Stock</span></li>
                        <li><b>Shipping</b> <span>01 day shipping. <samp>Free pickup today</samp></span></li>
                        <li><b>Weight</b> <span>0.5 kg</span></li>
                        <li>
                            <b>Share on</b>
                            <div class="share">
                                <a href="#"><i class="fa fa-facebook"></i></a>
                                <a href="#"><i class="fa fa-twitter"></i></a>
                                <a href="#"><i class="fa fa-instagram"></i></a>
                                <a href="#"><i class="fa fa-pinterest"></i></a>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="product__details__tab">
                    <ul class="nav nav-tabs" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" data-toggle="tab" href="#tabs-1" role="tab"
                            aria-selected="true">Description</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#tabs-2" role="tab"
                            aria-selected="false">Information</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#tabs-3" role="tab"
                            aria-selected="false">@productReview.Count() Reviews <span></span></a>
                           
                        </li>
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane active" id="tabs-1" role="tabpanel">
                            <div class="product__details__tab__desc">
                                <h6>Miêu tả sản phẩm</h6>
                                <p>
                                    @Model.Detail
                                </p>

                            </div>
                        </div>
                        <div class="tab-pane" id="tabs-2" role="tabpanel">
                            <div class="product__details__tab__desc">
                                <h6>Miêu tả sản phẩm</h6>
                                <p>
                                    @Model.Detail
                                </p>

                            </div>
                        </div>
                        <div class="tab-pane" id="tabs-3" role="tabpanel">
                            <div class="product__details__tab__desc">
                                <h6>Miêu tả sản phẩm</h6>
                                <p>
                                    @Model.Detail
                                </p>
                                <h6>Đánh giá sản phẩm</h6>
                                <ul>
                                    @foreach (var item in productReview)
                                    {
                                        <li>
                                            <ul class="user-info" style="display: flex; align-items: flex-start; gap: 1rem; list-style: none; margin: 0; padding: 1rem; border: 1px solid #ddd; border-radius: 8px; background-color: #f9f9f9;">
                                                <li class="user-avatar" style="flex-shrink: 0;">
                                                    <img src="/assets/images/testimonial/user/1.png" alt="User Image" style="width: 50px; height: 50px; border-radius: 50%; object-fit: cover; border: 2px solid #ddd;">
                                                </li>
                                                <li class="user-comment" style="flex-grow: 1;">
                                                    <div class="rating-box" style="margin-bottom: 0.5rem;">
                                                        <ul style="display: flex; padding: 0; margin: 0; list-style: none;">
                                                            @for (var i = 0; i < item.Star; i++)
                                                            {
                                                                <li style="color: #ffc107; font-size: 1rem; margin-right: 0.2rem;"><i class="pe-7s-star"></i></li>
                                                            }
                                                        </ul>
                                                    </div>
                                                    <div class="meta" style="font-size: 0.9rem; color: #555; margin-bottom: 0.5rem;">
                                                        <span style="display: block;"><strong style="color: #333; font-weight: bold;">@item.Name</strong> (@item.CreatedDate.Value.ToString("dd/MM/yyyy"))</span>
                                                    </div>
                                                    <p class="short-desc mb-0" style="font-size: 1rem; line-height: 1.5; color: #333; margin: 0;">
                                                        @item.Detail
                                                    </p>
                                                </li>
                                            </ul>
                                        </li>


                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Product Details Section End -->
<!-- Related Product Section Begin -->
<section class="related-product">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title related__product__title">
                    <h2>Related Product</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach(var item in productRelated.Take(4))
            {
                <div class="col-lg-3 col-md-4 col-sm-6">
                    <div class="product__item">
                        <div class="product__item__pic set-bg" data-setbg="@item.Image">
                            <ul class="product__item__pic__hover">
                                <li><a href="#"><i class="fa fa-heart"></i></a></li>
                                <li><a href="#"><i class="fa fa-retweet"></i></a></li>
                                <li><a href="#"><i class="fa fa-shopping-cart"></i></a></li>
                            </ul>
                        </div>
                        <div class="product__item__text">
                            <h6><a href="#">@item.Title</a></h6>
                            <h5>@item.Price</h5>
                        </div>
                    </div>
                </div>
            }
           
        </div>
    </div>
</section>